@using lawconncect.Data
@{
    ViewData["Title"] = "Home Page";
}
@* nav var *@

<h2 style="margin-bottom: 15px;">User Dashboard</h2>

<!-- Navigation Bar -->
<nav style="background-color: #333; padding: 10px;">
    <a href="#" onclick="showSection('profile')" style="color: white; background-color: #444; margin-right: 10px; text-decoration: none; padding: 8px 12px; display: inline-block; border-radius: 4px;">Profile</a>
    <a href="#" onclick="showSection('case')" style="color: white; background-color: #444; margin-right: 10px; text-decoration: none; padding: 8px 12px; display: inline-block; border-radius: 4px;">Case</a>
    <a href="#" onclick="showSection('section')" style="color: white; background-color: #444; margin-right: 10px; text-decoration: none; padding: 8px 12px; display: inline-block; border-radius: 4px;">Section</a>
    <a href="#" onclick="showSection('shareDocuments')" style="color: white; background-color: #444; margin-right: 10px; text-decoration: none; padding: 8px 12px; display: inline-block; border-radius: 4px;">Share Documents</a>
    <a href="#" onclick="showSection('viewDetails')" style="color: white; background-color: #444; text-decoration: none; padding: 8px 12px; display: inline-block; border-radius: 4px;">View Details</a>
</nav>

<!-- Sections -->
<section id="profile" style="margin-top: 30px; padding: 10px; border: 1px solid #ccc;">
    <h3>Profile</h3>
   <div> 
       
		 @await Component.InvokeAsync("Client"); 
    </div> 
</section>

<section id="case" style="display: none; margin-top: 30px; padding: 10px; border: 1px solid #ccc;">
    <h3>Case</h3>
    <p>Case-related content goes here...</p>
</section>

<section id="section" style="display: none; margin-top: 30px; padding: 10px; border: 1px solid #ccc;">
    <h3>Section</h3>
    <p>Section-related content goes here...</p>
</section>

<section id="shareDocuments" style="display: none; margin-top: 30px; padding: 10px; border: 1px solid #ccc;">
    <h3>Share Documents</h3>
    <p>Document sharing interface goes here...</p>
</section>

<section id="viewDetails" style="display: none; margin-top: 30px; padding: 10px; border: 1px solid #ccc;">
    <h3>View Details</h3>
    <p>Details will be shown here...</p>
</section>

<!-- Inline Script to Toggle Sections -->


@* navbar end *@

<!-- Hero Section -->
<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Welcome to LawConnect</h1>
        <p class="lead">Connecting Clients and Lawyers Efficiently and Securely</p>
    </div>
</section>

<!-- Lawyer Features -->
<section id="lawyer" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Features for Lawyers</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Client Management</h5>
                        <p class="card-text">Easily manage your clients and their cases from a centralized dashboard.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Schedule Meetings</h5>
                        <p class="card-text">Set appointments and send reminders directly to your clients.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Secure Document Sharing</h5>
                        <p class="card-text">Upload and share legal documents securely with encryption.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Client Features -->
<section id="client" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Features for Clients</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Find a Lawyer</h5>
                        <p class="card-text">Search for experienced lawyers based on your legal needs and location.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Track Your Case</h5>
                        <p class="card-text">Stay updated on the status of your case and upcoming court dates.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section-->
<section id="contact" class="py-5 text-center">
    <div class="container">
        <h2>Contact Us</h2>
        <p>Email: support@lawconnect.com | Phone: +123 456 7890</p>
    </div>
</section>
<script>
    function showSection(id) {
      const sections = ['profile', 'case', 'section', 'shareDocuments', 'viewDetails'];
      for (let i = 0; i < sections.length; i++) {
        document.getElementById(sections[i]).style.display = (sections[i] === id) ? 'block' : 'none';
      }
    }
</script>


