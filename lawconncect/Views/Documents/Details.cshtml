@model lawconncect.Models.Documents

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Documents</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocPath)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DocPath != null)
            {
                <a href="@Url.Content(Model.DocPath)" target="_blank">View Document</a>
            }
            else
            {
				<p>No Document</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
